<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netflix Movie Manager</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Link to Custom CSS -->
    <link rel="stylesheet" href="/styles.css">
</head>

<body>

    <!-- Header -->
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="#">
            <img src="../img/logo.png" alt="Netflix" class="netflix-logo">
        </a>
        <a href="/openadd" class="btn btn-netflix ms-auto">
             Add Movie
        </a>
    </nav>

    <!-- Movie Cards Section -->
    <div class="container mt-5">
        <div class="row">
            <% data.forEach((m, index) => { %>
                <div class="col-md-4 mb-4">
                    <div class="card movie-card">
                        <div class="img-container">
                            <img src="<%= m.path %>" alt="<%= m.title %>" class="movie-poster">
                        </div>
                        <div class="card-hover">
                            <div class="card-title">
                                <span><%= m.title %></span>
                                <span><%= m.year %></span>
                            </div>
                            <p class="card-description"><%= m.description %></p>
                            <div class="btn-group">
                                <a href="/singleMovie/<%= m.id %>" class="btn btn-edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/deleteMovies/<%= m.id %>" class="btn btn-delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a href="/singleView/<%= m.id %>" class="btn btn-view">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>